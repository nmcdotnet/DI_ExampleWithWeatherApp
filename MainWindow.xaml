<Window x:Class="DI_ExampleWithWeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DI_ExampleWithWeatherApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding WeatherInfo}" FontSize="16" HorizontalAlignment="Center" Margin="10"/>
            <Button Content="Get Weather" Command="{Binding GetWeatherCommand}" Width="120" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
